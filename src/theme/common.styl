// 滚动条样式
.beauty-scroll
  overflow-y scroll
  &::-webkit-scrollbar{
    width: 6px;
  }
  &::-webkit-scrollbar:horizontal{
    height: 8px;
  }
  &::-webkit-scrollbar-thumb{
    border-radius: 6px;
    background-color: #ccc;
  }
  &::-webkit-scrollbar-track {
    background-color: transparent;
  }
  &::-webkit-scrollbar-corner{
    display: none;
  }

// 省略号样式
.text-overflow
  white-space nowrap
  text-overflow: ellipsis
  overflow hidden
  word-break break-all

.empty-svg
  height 130px
  width 100%
  padding 80px 0

// 范围、颗粒度、按销量、销售额的分组按钮
.filter-group-btn-wapper
  display flex
  align-items center
  color $base-gray
  font-size $font-size-12
  .filter-label
    color $color-second
    line-height 20px
  .filter-btn
    height 22px
    padding 2px 14px 3px 14px


.el-table >>> .tableHeaderClass th
  background-color $table-header-bgc !important
  height 48px
  color $color-cate-gary
  font-weight bolder
  font-size 14px

.el-table >>> .tableCellClass
  border-bottom: 1px solid #EBEEF5;

.el-table >>> .el-table__body-wrapper
  font-size 14px !important

.custom-tree-node
  font-size 14px
  color $color-cate-gary

.loading-class
  .el-icon-loading
    color $base-blue
  .el-loading-text
    color $base-blue


// this.$confirm 样式
.message-box
  padding 32px
  border-radius 1px
  .el-message-box__header
    padding 0
    margin-bottom 12px
  .el-message-box__content
    padding 0
    margin-bottom 24px

// fade 动画
.fade-enter-active{
  -webkit-animation: fade-in .3s;
  animation: fade-in .3s
  }
.fade-leave-active{
  -webkit-animation:fade-out .3s;
  animation:fade-out .3s}

@keyframes fade-in {
  0% {
    transform: translate3d(0,-20px,0)
    opacity: 0
  }
  100% {
    transform:translate3d(0,0,0)
    opacity:1
  }
}
@keyframes fade-out {
  0% {
    transform:translate3d(0,0,0)
    opacity:1
  }
  100% {
    transform:translate3d(0,-20px,0)
    opacity:0
  }
}

// 字体颜色
.text-second
  color $color-second
.text-warning
  color $color-warning
